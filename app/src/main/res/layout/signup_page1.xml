<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondaryblue">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="388dp"
        android:layout_height="218dp"
        app:srcCompat="@drawable/group_12"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="349dp"
        android:layout_height="73dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Before we can get started, tell us a bit about yourself! "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="244dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="328dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="36dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/person_black_24dp_2"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/editFeet"
            android:layout_width="339dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/secondaryblue"
            android:ems="30"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="6dp" />

        <View
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:background="@android:color/white"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="78dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="425dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="36dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/person_black_24dp_2"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/editGender"
            android:layout_width="339dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/secondaryblue"
            android:ems="30"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textPersonName"
            android:text="Gender"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="6dp" />

        <View
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:background="@android:color/white"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="78dp" />

        <ImageView
            android:id="@+id/genderDropDown"
            android:layout_width="36dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/arrow_drop_down_black_24dp_1"
            tools:layout_editor_absoluteX="379dp"
            tools:layout_editor_absoluteY="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="522dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="36dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/event_black_24dp_1__1"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/editAge"
            android:layout_width="339dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/secondaryblue"
            android:ems="30"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textPersonName"
            android:text="Age"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="6dp" />

        <View
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:background="@android:color/white"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="78dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="169dp"
        android:layout_height="53dp"
        android:background="@drawable/button"
        android:text="Next Step"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_semibold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="631dp" />

</androidx.constraintlayout.widget.ConstraintLayout>