<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondaryblue"
    android:configChanges="orientation"
    android:screenOrientation="portrait">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="216dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031"
        app:srcCompat="@drawable/group_12" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="349dp"
        android:layout_height="73dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Last step, tell us about your sleeping disorders! "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="249dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="296dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/insomniaButton"
            android:layout_width="352dp"
            android:layout_height="62dp"
            android:background="@drawable/radio_buttons"
            android:buttonTint="@color/radioblue"
            android:fontFamily="@font/poppins_semibold"
            android:onClick="onRadioButtonClicked"
            android:padding="5dp"
            android:text="  Insomnia"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:checked="false"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.413"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.068" />

        <RadioButton
            android:id="@+id/sleepApneaButton"
            android:layout_width="356dp"
            android:layout_height="59dp"
            android:background="@drawable/radio_buttons"
            android:buttonTint="@color/radioblue"
            android:fontFamily="@font/poppins_semibold"
            android:onClick="onRadioButtonClicked"
            android:padding="5dp"
            android:text="  Sleep Apnea"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:checked="false"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.447" />

        <RadioButton
            android:id="@+id/narcolepsyButton"
            android:layout_width="356dp"
            android:layout_height="60dp"
            android:background="@drawable/radio_buttons"
            android:buttonTint="@color/radioblue"
            android:fontFamily="@font/poppins_semibold"
            android:onClick="onRadioButtonClicked"
            android:padding="5dp"
            android:text="  Narcolepsy"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:checked="false"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.817" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/nextStep3"
        android:layout_width="169dp"
        android:layout_height="53dp"
        android:background="@drawable/button"
        android:fontFamily="@font/poppins_semibold"
        android:text="Next Step"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938" />

</androidx.constraintlayout.widget.ConstraintLayout>